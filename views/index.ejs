<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>
    <main>
      <h1>Messages</h1>
      <ul>
        <% for( const msg of messages) { %>
        <li>
          <h3><%= msg.user %></h3>
          <p><%= msg.text %></p>
          <a href=<%= `/messages/${msg.id}` %>>Open</a>
        </li>
        <% } %>
      </ul>
    </main>
  </body>
</html>
